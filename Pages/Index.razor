@page "/"

<SfTreeView TValue="MailItem" ShowCheckBox="true" AutoCheck="false" AllowEditing="true"
            AllowMultiSelection="true" AllowDragAndDrop="true">
    <TreeViewFieldsSettings DataSource="@MyFolder" Id="Id" ParentID="ParentId" HasChildren="HasSubFolders"
                            Text="FolderName" Expanded="Expanded"></TreeViewFieldsSettings>
</SfTreeView>

@code {

    public class MailItem
    {
        public string Id { get; set; }
        public string ParentId { get; set; }
        public bool HasSubFolders { get; set; }
        public string FolderName { get; set; }
        public bool Expanded { get; set; }
    }

    List<MailItem> MyFolder = new List<MailItem>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        MyFolder.Add(new MailItem
            {
                Id = "1",
                FolderName = "Inbox",
                HasSubFolders = true,
                Expanded = true
            });
        MyFolder.Add(new MailItem
            {
                Id = "2",
                ParentId = "1",
                FolderName = "Categories",
                Expanded = true,
                HasSubFolders = true
            });
        MyFolder.Add(new MailItem
            {
                Id = "3",
                ParentId = "2",
                FolderName = "Primary"
            });
        MyFolder.Add(new MailItem
            {
                Id = "4",
                ParentId = "2",
                FolderName = "Social"
            });
        MyFolder.Add(new MailItem
            {
                Id = "5",
                ParentId = "2",
                FolderName = "Promotions"
            });
    }
}